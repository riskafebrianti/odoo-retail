                <t t-set="description" t-value="move_line.move_id.product_id.product_tmpl_id.name"/>
            </t>
            <p t-if="description !='' and description != move_line.move_id.product_id.product_tmpl_id.name">
                <span t-esc="description"/>
            </p>
        </td>
        </xpath>


