<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="paperformat_custom" model="report.paperformat">
        <field name="name">Custom Format</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">7</field>
        <field name="margin_bottom">7</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
    
     <record id="action_report_invoice" model="ir.actions.report">
        <field name="name">Invoice Customer</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">cust_diskon.sale_report</field>
        <field name="report_file">cust_diskon.sale_report</field>
        <field name="print_report_name">'Invoice'</field>
        <field name="paperformat_id" ref="cust_diskon.paperformat_custom"/>
        <field name="binding_model_id" ref="base_accounting_kit.paperformat_custom"/>
    </record>

</odoo>
